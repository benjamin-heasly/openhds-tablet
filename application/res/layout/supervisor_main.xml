<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/supervisor_main_activity"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:tag="landscape" >

    <FrameLayout
            android:id="@+id/supervisor_auxiliary_container"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:padding="15dp"/>

    <LinearLayout
            android:id="@+id/supervisor_activity_options"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:background="@drawable/gray_middle_column_drawable"
            android:padding="15dp">
    </LinearLayout>

    <FrameLayout
            android:id="@+id/supervisor_edit_form_container"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:padding="15dp">
    </FrameLayout>

</LinearLayout>