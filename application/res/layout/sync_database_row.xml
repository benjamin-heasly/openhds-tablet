<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/entity_column"
            android:layout_column="1"
            android:padding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/records_column"
            android:layout_column="2"
            android:padding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/errors_column"
            android:layout_column="3"
            android:padding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/action_column"
            android:layout_column="4"
            android:padding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_database_button_sync"
            android:background="@drawable/gray_button_selector"
            android:textAppearance="?android:attr/textAppearanceSmall" />

</TableRow>